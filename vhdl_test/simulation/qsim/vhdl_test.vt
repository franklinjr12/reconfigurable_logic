`timescale 1 ps/ 1 ps
module vhdl_test_vlg_sample_tst(
	A,
	B,
	sampler_tx
);
input  A;
input  B;
output sampler_tx;

reg sample;
time current_time;
always @(A or B)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module vhdl_test_vlg_check_tst (
	C,
	sampler_rx
);
input  C;
input sampler_rx;

reg  C_expected;

reg  C_prev;

reg  C_expected_prev;

reg  last_C_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:1] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 1'b1;
end

// update real /o prevs

always @(trigger)
begin
	C_prev = C;
end

// update expected /o prevs

always @(trigger)
begin
	C_expected_prev = C_expected;
end



// expected C
initial
begin
	C_expected = 1'bX;
end 
// generate trigger
always @(C_expected or C)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected C = %b | ",C_expected_prev);
	$display("| real C = %b | ",C_prev);
`endif
	if (
		( C_expected_prev !== 1'bx ) && ( C_prev !== C_expected_prev )
		&& ((C_expected_prev !== last_C_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port C :: @time = %t",  $realtime);
		$display ("     Expected value = %b", C_expected_prev);
		$display ("     Real value = %b", C_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_C_exp = C_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#1000000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

module vhdl_test_vlg_vec_tst();
// constants                                           
// general purpose registers
reg A;
reg B;
// wires                                               
wire C;

wire sampler;                             

// assign statements (if any)                          
vhdl_test i1 (
// port map - connection between master ports and signals/registers   
	.A(A),
	.B(B),
	.C(C)
);

// A
always
begin
	A = 1'b0;
	A = #50000 1'b1;
	#50000;
end 

// B
initial
begin
	B = 1'b1;
	B = #540000 1'b0;
end 

vhdl_test_vlg_sample_tst tb_sample (
	.A(A),
	.B(B),
	.sampler_tx(sampler)
);

vhdl_test_vlg_check_tst tb_out(
	.C(C),
	.sampler_rx(sampler)
);
endmodule

